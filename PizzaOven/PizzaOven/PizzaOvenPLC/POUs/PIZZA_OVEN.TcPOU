  <POU Name="PIZZA_OVEN" Id="{e54d8141-8c6a-4975-af63-b1ccd7a5bba4}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK PUBLIC PIZZA_OVEN
VAR_INPUT

	Pizza_in 	: 		BOOL:=FALSE;
	Pizza_out 	:		BOOL:=FALSE;

	fbTrig		: 	R_TRIG;
	fbTrig2		: 	R_TRIG;
END_VAR
VAR_OUTPUT
	PizzaStatus	: 	STRING;
END_VAR
VAR
	fbTimer		: 	TON;
	PizzaInOven	: 	BOOL;
	PizzaOnDeck	: 	BOOL;
	PizzaDone	: 	BOOL;
 	
	iState		:  	DINT:=0;
	bBurned:		BOOL;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[
//control buttons
		fbTrig(CLK:=Pizza_in);//load pizza button clicked trggered
IF		fbTrig.Q THEN		//When Triggerd 
		PizzaOnDeck:=TRUE;	
		//Pizza_in:=FALSE;
		//fbTrig(clk:=FALSE);
END_IF		

	fbTrig2(CLK:=Pizza_out); 
IF 	Pizza_out THEN
	PizzaDone:=FALSE;
	//Pizza_out:=FALSE;
		//fbTrig2(clk:=Pizza_out);
END_IF


//status changes
CASE iState OF 
0:	IF PizzaOnDeck AND NOT PizzaInOven THEN
		PizzaOnDeck:=FALSE;
		PizzaInOven:=TRUE;
		iState:=10;
	END_IF
10:	PizzaStatus:='cooking...';
IF PizzaInOven THEN
fbTimer(IN:=PizzaInOven,PT:=T#3S);
	END_IF
IF fbTimer.Q THEN
	//PizzaInOven:=FALSE;
	
	iState:=20;
	
END_IF
	
20:	//Pizza out.
	
	IF  NOT PizzaDone THEN

	PizzaInOven:=FALSE;
	PizzaDone:=TRUE;
	fbTimer(IN:=FALSE);
	iState:=0;
	ELSE 
		bBurned:=TRUE;
	END_IF
	
END_CASE]]></ST>
    </Implementation>
